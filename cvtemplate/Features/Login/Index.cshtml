@model cvtemplate.Features.Login.LoginCommand

<h2>Login</h2>

<form asp-controller="Login" asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    Username: <input asp-for="@Model.Email" /><br/>
    Password: <input asp-for="@Model.Password" type="password" /><br />
    <input type="submit" value="Login" />
    @Html.AntiForgeryToken()
</form>